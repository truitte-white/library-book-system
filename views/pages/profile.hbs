<div class="container">
    <div class="jumbotron">
        <h1>User Profile</h1>
        <p>Bootstrap is the most popular HTML, CSS, and JS framework for developing responsive, mobile-first projects on the web.</p>
    </div>
    <div class="profile-book-section">
        <h3>Borrowed Book(s)</h3>
        <ul class="list-group">
            {{#each books}}
            <li class="list-group-item">
                {{this.book_name}} {{this.borrow_date}}
                <form action="/books/return/{{this.book_id}}" method="POST">
                    <button type="submit" class="btn btn-info">Return</button>
                </form>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
